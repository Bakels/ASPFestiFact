<head>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>

@model FestiFact.Domain.Entities.Organisation

@{
    ViewBag.Title = "Organisatie";
}

<h2>@Model.Name</h2>


@using (@Html.BeginForm()) {

    <div style="display:none"> @Html.TextBoxFor(x => x.ID);</div>
    <div style="display:none"> @Html.TextBoxFor(x => x.Username);</div>
    <div style="display:none"> @Html.TextBoxFor(x => x.Password);</div>
    <div style="display:none"> @Html.TextBoxFor(x => x.Role);</div>
    <div style="display:none"> @Html.TextBoxFor(x => x.Logged);</div>

    <div class="form-horizontal">

        <div class="form-group">
            <label class="col-md-1">Organisatie: </label>
            <div class="col-md-3">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-1">E-mail: </label>
            <div class="col-md-3">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-1">Telefoon: </label>
            <div class="col-md-3">
                @Html.TextBoxFor(x => x.Tel, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-1">Toegang: </label>
            <div class="col-md-3">
                <label class="radio-inline">
                    @Html.RadioButtonFor(x => x.Acces, "Toegang", new { @class = "radio" })
                    Ja
                </label>
                <label class="radio-inline">
                    @Html.RadioButtonFor(x => x.Acces, "Geen toegang", new { @class = "radio" })
                    Nee
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-1">Opmerkingen: </label>
            <div class="col-md-3">
                @Html.TextAreaFor(x => x.Comment, new { @class="form-control"} )
            </div>
        </div>
        <div class="btn-group">
            <input class="btn btn-success" type="submit" value="Opslaan" />
        </div>


    </div>
}
