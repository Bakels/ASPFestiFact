@model FestiFact.WebUI.Areas.Organisator.Models.NewFestivalModel

<head>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>


@{
    ViewBag.Title = "AddFestival";
}

<h2>Maak een niew festival</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" })) {
    @Html.ValidationSummary()


    <div class="form-group">
        <div style="display:none"> @Html.TextBoxFor(f => f.festival.ID);</div>
        <label>Naam: </label>
        @Html.TextBoxFor(f => f.festival.Name)
    </div>
    <div class="form-group">
        <label>Beschrijving: </label>
        @Html.TextAreaFor(f => f.festival.Description)
    </div>
    <div class="form-group">
        <label>afbeeldingen: </label>
        <input type="file" name="pictures[0]" id="pictures[0]" style="width: 100%;" />
        <input type="file" name="pictures[1]" id="pictures[1]" style="width: 100%;" />
        <input type="file" name="pictures[2]" id="pictures[2]" style="width: 100%;" />

    </div>
    <div class="form-group">
        <label>type: </label>
        @Html.DropDownListFor(f => f.festival.Type, (new[] {
                                new SelectListItem() { Value = "Muziek", Text = "Muziek" },
                                new SelectListItem() { Value = "Theater", Text = "Theater" },
                                new SelectListItem() { Value = "Film", Text = "Film" },
                                new SelectListItem() { Value = "Game", Text = "Game" }
                             }))
    </div>

    <div class="form-group">
        <label>Genre: </label>
        @Html.TextBoxFor(f => f.festival.Genre )
    </div>

    <div class="form-group">
        <label>leeftijd van: </label>
        @Html.TextBoxFor(f => f.festival.MinAge )
        <label> tot:</label>
        @Html.TextBoxFor(f => f.festival.MaxAge )
    </div>

    <div class="form-group ">
        <label>Datums: </label> <br />
        @Html.TextBoxFor(f => f.dates[0].Datum ) <br />
        @Html.TextBoxFor(f => f.dates[1].Datum ) <br />
        @Html.TextBoxFor(f => f.dates[2].Datum )

    </div>

    <div class="form-group ">
        <label>Locaties: </label> <br />
        @Html.TextBoxFor(f => f.locations[0].City ) <br />
        @Html.TextBoxFor(f => f.locations[1].City ) <br />
        @Html.TextBoxFor(f => f.locations[2].City )
    </div>


    <input class="btn btn-succes" type="submit" value="Opslaan" />

}